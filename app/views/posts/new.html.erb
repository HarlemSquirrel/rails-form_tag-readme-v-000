<h3>Post Form</h3>

<%= form_tag posts_path do %>
  <label>Post title:</label><br>
  <%= text_field_tag :title, "#{params[:post][:title]}" %><br>

  <label>Post Description</label><br>
  <%= text_area_tag :description, "#{params[:post][:description]}" %><br>

  <%= submit_tag "Submit Post" %>
<% end %>
